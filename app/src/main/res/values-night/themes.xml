<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_200</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluegrey_200</item>
        <item name="colorSecondaryVariant">@color/bluegrey_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Body1.GeneralText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Card">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title.Profile">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Profile">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>